    "def tough(indent, current):\n",
    "    if current < 1:\n",
    "        return\n",
    "    \n",
    "    tough(indent, current//2)\n",
    "    print(' ' * indent  + '*' * current)\n",
    "    tough(indent + 1, current//2)\n",
    "\n",
    "tough(0, 1)\n",
    "print('')\n",
    "tough(0, 2)\n",
    "print('')\n",
    "tough(0, 4)"
   ]
